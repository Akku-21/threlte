---
import { Image } from '@astrojs/image/components'
import LogoOnly from '$assets/logo/threlte-logo-only.png'
import { c } from '$lib/classes'

interface Props {
  class?: string
}
---

<footer class={c('grid grid-cols-1 lg:grid-cols-3 text-sm', Astro.props.class ?? '')}>
  <div class="flex flex-col gap-6">
    <Image
      src={LogoOnly}
      alt="threlte logo"
      width={200}
      class="w-[37px]"
    />
    <p class="text-faded">
      Threlte is a 3D framework for Svelte.<br />
      &copy; 2023
    </p>
  </div>

  <div class="grid grid-cols-2">
    <ul>
      <li class="mb-4 font-bold uppercase">Get Started</li>
      <li>
        <a
          class="text-faded hover:text-white"
          href="/docs/learn/getting-started/installation"
          >Install</a
        >
      </li>
      <li>
        <a
          class="text-faded hover:text-white"
          href="/docs/learn/getting-started/your-first-scene"
          >Concepts</a
        >
      </li>
      <li>
        <a
          class="text-faded hover:text-white"
          href="/docs/reference/core/getting-started"
          >Reference</a
        >
      </li>
    </ul>
    <ul>
      <li class="mb-4 font-bold uppercase">Community</li>
      <li>
        <a
          href="https://twitter.com/threlte"
          target="_blank"
          rel="noopener noreferrer"
          class="text-faded hover:text-white"
        >
          Twitter
        </a>
      </li>
      <li>
        <a
          href="https://discord.gg/EqUBCfCaGm"
          target="_blank"
          rel="noopener noreferrer"
          class="text-faded hover:text-white"
        >
          Discord
        </a>
      </li>
      <li>
        <a
          href="https://github.com/threlte/threlte"
          target="_blank"
          rel="noopener noreferrer"
          class="text-faded hover:text-white"
        >
          GitHub
        </a>
      </li>
    </ul>
  </div>
</footer>
