---
import { Image } from '@astrojs/image/components'
import AppLayout from './AppLayout.astro'
import Logo from '$assets/logo/threlte-logo.png'
import LeftSidebar from '$components/Menu/LeftSidebar/LeftSidebar.astro'

export interface Props {
  title?: string
}

const title = Astro.props.title
---

<AppLayout title={title}>
  <header class="fixed">
    <a href="/">
      <Image
        src={Logo}
        alt="threlte logo"
        width={200}
      />
    </a>
  </header>

  <main class="flex flex-row">
    <aside class="w-[var(--left-sidebar-width)] mt-[var(--docs-navbar-height)] fixed">
      <LeftSidebar />
    </aside>

    <div class="prose ml-[var(--left-sidebar-width)] mt-[var(--docs-navbar-height)]">
      <slot />
    </div>
  </main>
</AppLayout>
