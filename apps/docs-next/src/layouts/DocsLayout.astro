---
import { Image } from '@astrojs/image/components'
import type { CollectionEntry } from 'astro:content'
import AppLayout from './AppLayout.astro'
import Logo from '$assets/logo/threlte-logo-only.png'
import LeftSidebar from '$components/Menu/LeftSidebar/LeftSidebar.astro'
import Socials from '$components/Socials/Socials.astro'
import RightSidebar from '$components/Menu/RightSidebar/RightSidebar.astro'

export interface Props {
  title?: string
  entry: CollectionEntry<'learn'> | CollectionEntry<'reference'>
}

const title = Astro.props.title
---

<AppLayout title={title}>
  <header
    class="fixed w-full h-[80px] items-center px-6 mx-auto flex flex-row justify-between bg-[#0D1421] border-b-orange/25 border-b z-10"
  >
    <a
      href="/"
      class="flex flex-row gap-4 items-center"
    >
      <Image
        src={Logo}
        alt="threlte logo"
        width={200}
        class="w-[37px]"
      />

      <h2
        class="text-orange text-2xl font-bold border-2 border-orange-500 bg-orange-800/50 rounded-md px-1.5 translate-y-px"
      >
        DOCS
      </h2>
    </a>

    <div class="flex flex-row gap-5">
      <Socials />
    </div>
  </header>

  <main
    class="grid md:grid-cols-[var(--left-sidebar-width)_1fr] lg:grid-cols-[var(--left-sidebar-width)_1fr_var(--right-sidebar-width)]"
  >
    <aside
      class="mt-[var(--docs-navbar-height)] pt-6 place-self-start md:sticky md:top-[80px] justify-self-stretch row-span-2 lg:row-span-1 order-1 fixed bottom-0 w-full md:w-auto"
    >
      <LeftSidebar />
    </aside>

    <div
      class="w-full lg:mt-[var(--docs-navbar-height)] px-6 pt-6 overflow-x-auto pb-12 justify-self-center lg:order-2 order-3"
    >
      <article
        class="prose prose-a:text-orange before:prose-code:content-none after:prose-code:content-none prose-invert mx-auto [&_p]:text-faded max-w-5xl"
      >
        <slot />
      </article>
    </div>

    <aside
      class="w-full mt-12 lg:mt-[var(--docs-navbar-height)] pt-6 place-self-start justify-self-end sticky top-[80px] lg:order-3 order-2 ml-4 bg-gradient-to-b from-[#0c1421] via-[#0c1421]"
    >
      <RightSidebar entry={Astro.props.entry} />
    </aside>
  </main>
</AppLayout>
